extends layout

block content
	h1= title
	p Welcome to Gibbr Login
	// Wrapper
	#wrapper
		// USER INFO
		#userInfo
			h2 User Info
			p
				strong Name:
				|  <span id='userInfoName'></span>
				br
				strong Email:
				|  <span id='userInfoEmail'></span>
				br
				strong Gender:
				|  <span id='userInfoGender'></span>
				br
				strong Location:
				|  <span id='userInfoLocation'></span>
		// /USER INFO
		// USER LIST
		h2 Gibbr User List
		#userList
			table
				thead
					th Mongo ID
					th User Name
					th College Name
					th Full Name
					th Email
					th Gender
					th Location
					th Update
					th Delete?
				tbody
		// /USER LIST
		// ADD USER
		h2 Add User
		#addUser
			fieldset
				input#inputUserName(type='text', placeholder='Username')
				input#inputUserEmail(type='text', placeholder='Email')
				br
				input#inputUserFullName(type='text', placeholder='Full Name')
				input#inputCollegeName(type='text', placeholder='College Name')
				br
				input#inputUserLocation(type='text', placeholder='Location')
				input#inputGender(type='text', placeholder='Gender')
				br
				button#btnAddUser Add New User
		// /ADD USER
		br
		br
		h2 Update User
		#updateUser
			fieldset
				input#inputUserName(type='text', placeholder='Username')
				input#inputUserEmail(type='text', placeholder='Email')
				br
				input#inputUserFullName(type='text', placeholder='Full Name')
				input#inputCollegeName(type='text', placeholder='College Name')
				br
				input#inputUserLocation(type='text', placeholder='Location')
				input#inputGender(type='text', placeholder='Gender')
				br
				button#btnUpdateUser Update User
		// /ADD USER
	// /WRAPPER